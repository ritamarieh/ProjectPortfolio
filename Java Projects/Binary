/*Convert a user input into binary.*/
import java.util.Scanner; 

public class LabProgram {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      
      int x;
      
      x = scnr.nextInt();
      
      while(x > 0) {
         if ((x % 2 == 0) || (x % 2 == 1)){
            System.out.print(x%2);
         }
         x /= 2;
      }
      System.out.println();
   }
}
